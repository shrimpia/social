{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": ["dist", "node_modules", ".pnpm-store"]
  },
  "javascript": {
    "jsxRuntime": "reactClassic",
    "formatter": {
      "indentStyle": "space",
      "semicolons": "always",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  }
}
